@using Forum.Controllers.Auntification
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">Элемент</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-right">
                    @if (!Authentification.Status)
                    {
                        <li><a href="/Account/Login">Выполнить вход</a></li>
                        <li><a href="/Account/Registration">Регистрация</a></li>
                    }
                    else
                    {
                        <li><a href="/Account/Login">Hello, Mr.@Authentification._FIO </a></li>
                        <li><a href="/Account/LogOut">Выход</a></li>
                    }

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">

        <hr />
        <div class="alert alert-info" role="alert">
            @RenderBody()
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
