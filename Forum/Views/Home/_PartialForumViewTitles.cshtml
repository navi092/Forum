@model List<Forum.Models.ForumTitles>
<script type="text/javascript">
    function submitBtn(id) {
        $("#form_" + id).submit(); // Submit the form
    };
</script>


<input type="text" name="search" class="form-control" title="Search field" placeholder="Search forume" />
<hr />

@foreach (Forum.Models.ForumTitles item in Model)
{
    <form action="/Home/ViewerContentForum" id="form_@item.Id" method="get">
        <div class="list-group">
            <button class="list-group-item list-group-item-action" onclick="submitBtn(@item.Id)" value="@item.Id" name="id">
                <div class="d-flex w-100 justify-content-between">
                    <h3 class="mb-1" style="color:blue">@item.ForumTitle)</h3>
                </div>
            </button>
        </div>
    </form>
}
